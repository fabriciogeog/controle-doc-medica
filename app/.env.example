# Configurações da Aplicação
NODE_ENV=production
PORT=3000

# MongoDB
MONGODB_URI=mongodb://mongodb:27017/controle_doc_medica

# Segurança — gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=troque_por_string_aleatoria_com_32_ou_mais_caracteres

# Senha de acesso à aplicação (usuário único)
ADMIN_PASSWORD=troque_por_sua_senha

# Bcrypt rounds (12 em produção, 1 em testes)
BCRYPT_ROUNDS=12

# Caminhos adicionais permitidos para servir arquivos (separados por vírgula)
# ALLOWED_FILE_PATHS=/outro/caminho
