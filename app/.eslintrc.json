{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["public/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "rules": {
        "no-useless-escape": "off"
      }
    }
  ]
}
